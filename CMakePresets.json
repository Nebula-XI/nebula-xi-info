{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-configure",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "TEST_ENABLE": true
      }
    },
    {
      "name": "base-gnu-x64",
      "hidden": true,
      "inherits": "base-configure",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "x86_64",
        "CMAKE_SYSTEM_NAME": "Linux"
      }
    },
    {
      "name": "base-cross-mingw-x64",
      "hidden": true,
      "inherits": "base-configure",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "x86_64",
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_TOOLCHAIN_FILE": "./cmake/toolchain-mingw-w64-x86_64.cmake"
      }
    },
    {
      "name": "linux-x64-release",
      "inherits": "base-gnu-x64",
      "displayName": "[x64-gnu] Configure Linux (Release)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-x64-debug",
      "inherits": "base-gnu-x64",
      "displayName": "[x64-gnu] Configure Linux (Debug)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "inherits": "base-cross-mingw-x64",
      "displayName": "[x64-mingw-cross] Configure Windows on Linux (Release)",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Release"
      }
    },
    {
      "name": "windows-x64-debug",
      "inherits": "base-cross-mingw-x64",
      "displayName": "[x64-mingw-cross] Configure Windows on Linux (Debug)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base-build",
      "hidden": true,
      "jobs": 4
    },
    {
      "name": "linux-x64-release",
      "displayName": "[x64-gnu] Build Linux (Release)",
      "inherits": "base-build",
      "configurePreset": "linux-x64-release"
    },
    {
      "name": "linux-x64-release-rebuild",
      "displayName": "[x64-gnu] Re-Build Linux (Release)",
      "inherits": "linux-x64-release",
      "cleanFirst": true
    },
    {
      "name": "linux-x64-release-verbose",
      "displayName": "[x64-gnu] Verbose Re-Build Linux (Release)",
      "inherits": "linux-x64-release",
      "cleanFirst": true,
      "verbose": true
    },
    {
      "name": "linux-x64-debug",
      "displayName": "[x64-gnu] Build Linux (Debug)",
      "inherits": "base-build",
      "configurePreset": "linux-x64-debug"
    },
    {
      "name": "linux-x64-debug-rebuild",
      "displayName": "[x64-gnu] Re-Build Linux (Debug)",
      "inherits": "linux-x64-debug",
      "cleanFirst": true
    },
    {
      "name": "linux-x64-debug-verbose",
      "displayName": "[x64-gnu] Verbose Re-Build Linux (Debug)",
      "inherits": "linux-x64-debug",
      "cleanFirst": true,
      "verbose": true
    },
    {
      "name": "windows-x64-release",
      "displayName": "[x64-mingw-cross] Build Windows on Linux (Release)",
      "inherits": "base-build",
      "configurePreset": "windows-x64-release"
    },
    {
      "name": "windows-x64-release-rebuild",
      "displayName": "[x64-mingw-cross] Re-Build Windows on Linux (Release)",
      "inherits": "windows-x64-release",
      "cleanFirst": true
    },
    {
      "name": "windows-x64-release-verbose",
      "displayName": "[x64-mingw-cross] Verbose Re-Build Windows on Linux (Release)",
      "inherits": "windows-x64-release",
      "cleanFirst": true,
      "verbose": true
    },
    {
      "name": "windows-x64-debug",
      "displayName": "[x64-mingw-cross] Build Windows on Linux (Debug)",
      "inherits": "base-build",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "windows-x64-debug-rebuild",
      "displayName": "[x64-mingw-cross] Re-Build Windows on Linux (Debug)",
      "inherits": "windows-x64-debug",
      "cleanFirst": true
    },
    {
      "name": "windows-x64-debug-verbose",
      "displayName": "[x64-mingw-cross] Verbnose Re-Build Windows on Linux (Debug)",
      "inherits": "windows-x64-debug",
      "cleanFirst": true,
      "verbose": true
    }
  ],
  "testPresets": [
    {
      "name": "linux-x64-release",
      "displayName": "[x64-gnu] Test Linux (Release)",
      "configurePreset": "linux-x64-release"
    },
    {
      "name": "linux-x64-debug",
      "displayName": "[x64-gnu] Test Linux (Debug)",
      "configurePreset": "linux-x64-debug"
    },
    {
      "name": "windows-x64-release",
      "displayName": "[x64-mingw-cross] Test Windows on Linux (Release)",
      "configurePreset": "windows-x64-release"
    },
    {
      "name": "windows-x64-debug",
      "displayName": "[x64-mingw-cross] Test Windows on Linux (Debug)",
      "configurePreset": "windows-x64-debug"
    }
  ]
}

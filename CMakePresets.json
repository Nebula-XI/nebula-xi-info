{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "displayName": "Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Linux",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_PROCESSOR": "x86_64"
      },
      "environment": {
        "PATH": "$penv{PATH}"
      }
    },
    {
      "name": "linux",
      "inherits": "default",
      "displayName": "Linux",
      "description": "Release build for Linux (x86_64) using Ninja generator and Clang compiler",
      "binaryDir": "${sourceDir}/build/linux/x86_64/release",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Linux"
      }
    },
    {
      "name": "windows",
      "inherits": "default",
      "displayName": "Windows",
      "description": "Release build for Windows (x86_64) using Ninja generator and Clang compiler",
      "binaryDir": "${sourceDir}/build/windows/x86_64/release",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_TOOLCHAIN_FILE" : "./cmake/toolchain-mingw-w64-x86_64.cmake"

      }
    },
    {
      "name": "linux-debug",
      "inherits": "linux",
      "displayName": "Linux (Debug)",
      "description": "Debug build for Linux (x86_64) using Ninja generator and Clang compiler",
      "binaryDir": "${sourceDir}/build/linux/x86_64/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-debug",
      "inherits": "windows",
      "displayName": "Windows (Debug)",
      "description": "Debug build for Windows (x86_64) using Ninja generator and Clang compiler",
      "binaryDir": "${sourceDir}/build/windows/x86_64/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux",
      "configurePreset": "linux"
    },
    {
      "name": "windows",
      "configurePreset": "windows"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows-debug"
    }
  ]
}
